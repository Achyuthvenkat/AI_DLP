{
  "manifest_version": 3,
  "name": "AI DLP Browser Extension",
  "version": "1.0",
  "description": "Blocks sensitive data (PAN, credit cards, API keys) from being uploaded to AI/chat platforms.",
  "permissions": ["storage", "scripting", "webRequest", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["detectors.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
